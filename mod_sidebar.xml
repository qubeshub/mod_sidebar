<?xml version="1.0" encoding="utf-8"?>
<extension type="module" client="site" version="2.0.0">
	<!-- Name of the Module -->
	<name>mod_sidebar</name>

	<!-- Name of the Author -->
	<author>M. Drew LaMar</author>

	<!-- Version Date of the Module -->
	<creationDate>2016-12-17</creationDate>

	<!-- Copyright information -->
	<copyright>All rights reserved by M. Drew LaMar.</copyright>

	<!-- License Information -->
	<license>GPL 2.0</license>

	<!-- Author's email address -->
	<authorEmail>mdlama@wm.edu</authorEmail>

	<!-- Author's website -->
	<authorUrl>qubeshub.org</authorUrl>

	<!-- Module version number -->
	<version>1.0.0</version>

	<!-- Description of what the module does -->
	<description>MOD_SIDEBAR_DESCRIPTION</description>

	<!-- Listing of all files that should be installed for the module to function -->
	<files>
		<!-- The "module" attribute signifies that this is the main controller file -->
		<filename module="mod_sidebar">mod_sidebar.php</filename>
		<filename>index.html</filename>
		<filename>helper.php</filename>
		<filename>tmpl/default.php</filename>
		<filename>tmpl/index.html</filename>
		<filename>assets/css/mod_sidebar.css</filename>
		<filename>assets/js/mod_sidebar.js</filename>
	</files>

	<languages>
		<!-- Any language files included with the module -->
		<language tag="en-GB">language/en-GB/en-GB.mod_sidebar.ini</language>
	</languages>

	<!-- Optional parameters -->
	<config>
		<fields name="params">
			<fieldset name="basic">
				<!-- parameter to allow placement of a module class suffix for the module table / xhtml display -->
				<field name="cls" type="text" default="" label="MOD_SIDEBAR_PARAM_CLS_LABEL" description="MOD_SIDEBAR_PARAM_CLS_DESC" />
			</fieldset>
		</fields>
	</config>
</extension>